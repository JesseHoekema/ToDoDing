{
  "tasks": {
    "dev": "deno --watch -A src/index.ts",
    "prod": "deno -A src/index.ts"
  },
  "imports": {
    "$src/": "./src/",
    "@db/sqlite": "jsr:@db/sqlite@^0.13.0"
  },
  "lint": {
    "rules": {
      "tags": ["recommended", "jsr"],
      "include": [
        "camelCase",
        "eqeqeq",
        "explicit-function-return-type",
        "no-const-reassign",
        "no-eval"
      ]
    }
  }
}
